<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.TvShowDetail">

    <ImageView
        android:id="@+id/backdrop_detailtv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/poster_detailtv"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/backdrop_detailtv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backdrop_detailtv"
        app:layout_constraintTop_toTopOf="@+id/backdrop_detailtv"
        app:layout_constraintVertical_bias="0.018"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/genre_detailtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/poster_detailtv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toEndOf="@+id/poster_detailtv"
        app:layout_constraintTop_toBottomOf="@+id/title_detailtv"
        app:layout_constraintVertical_bias="0.214"
        tools:text="Genre" />

    <TextView
        android:id="@+id/title_detailtv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLength="20"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/poster_detailtv"
        app:layout_constraintEnd_toEndOf="@+id/backdrop_detailtv"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/poster_detailtv"
        app:layout_constraintTop_toTopOf="@+id/poster_detailtv"
        app:layout_constraintVertical_bias="0.493"
        tools:text="Title" />

    <TextView
        android:id="@+id/date_detailtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/desc_detailtv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toEndOf="@+id/poster_detailtv"
        app:layout_constraintTop_toBottomOf="@+id/genre_detailtv"
        app:layout_constraintVertical_bias="0.115"
        tools:text="Release Date" />

    <TextView
        android:id="@+id/desc_detailtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:maxLines="6"
        android:nestedScrollingEnabled="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/date_detailtv"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="@+id/title_detailtv"
        app:layout_constraintTop_toBottomOf="@+id/poster_detailtv"
        app:layout_constraintVertical_bias="0.121"
        tools:text="Overview" />

    <ToggleButton
        android:id="@+id/button_favoriteTv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_fav"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/backdrop_detailtv"
        app:layout_constraintEnd_toEndOf="@+id/backdrop_detailtv"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/backdrop_detailtv"
        app:layout_constraintTop_toTopOf="@+id/backdrop_detailtv"
        app:layout_constraintVertical_bias="0.146" />

</androidx.constraintlayout.widget.ConstraintLayout>